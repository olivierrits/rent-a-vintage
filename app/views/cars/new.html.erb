<p>Add a car</p>

<%= simple_form_for @car do |f| %>
  <%= f.input :name %>
  <%= f.input :brand %>
  <%= f.input :model %>
  <%= f.input :year %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%#= f.input :availabilty, as: :array %>
  <%= f.submit "Add a car", class: "btn btn-primary" %>
<% end %>
