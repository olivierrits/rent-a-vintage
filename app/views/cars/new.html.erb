<div class="background-form">
  <div class="form-square">
    <div class="form-title" style="padding:15px; text-align:center;">
        <h1>Add a new car</h1>
        <p>Please fill in all the fields and click "Add a car". </p>
    </div>
    <%= simple_form_for @car do |f| %>
      <%= f.input :name, input_html: { :value => @car.name } %>
      <%= f.input :brand, input_html: { :value => @car.brand } %>
      <%= f.input :model, input_html: { :value => @car.model } %>
      <%= f.input :year, input_html: { :value => @car.year } %>
      <%= f.input :description, input_html: { :value => @car.description } %>
      <%= f.input :price, input_html: { :value => @car.price } %>
      <%#= f.input :availabilty, as: :array %>
      <div class="form-button" id="large-new-btn">
        <button type="submit"  class="btn btn-update">
        Add a car
        </button>
      </div>
    <% end %>
    <%= link_to cars_path do %>
      <div class="form-button">
         Go back to the car list without saving
      </div>
    <% end %>
  </div>
</div>
