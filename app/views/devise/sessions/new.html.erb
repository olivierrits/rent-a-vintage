<div class="background-form">
  <div class="form-square">
    <div style="color: red; width: 100%; margin-top: 30px; text-align: center;" >
    <span class=“notice”><%= notice %></span>
    <span class=“alert”><%= alert %></span>
  </div>
    <div class="form-title" style="padding:15px; text-align:center;">
        <h1>Login</h1>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions form-button">
        <%= f.button :submit, "Log in", class: "btn btn-update" %>

      </div>
      <div class="form-actions" style="text-align: center; color: steelblue; font-style: italic;">
        <br>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
    <% end %>
  </div>
</div>
