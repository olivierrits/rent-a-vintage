<div class="container">
  <div class="banner" style="padding:15px; text-align:center; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://d39a3h63xew422.cloudfront.net/wp-content/uploads/2019/12/05134339/Andrea-Casano-rare-Fiat-600s-meetup-44-1000x666.jpg);">
    <h1>Edit your ride</h1>
    <p>Please fill in all the fields and click "Save changes". </p>
  </div>

  <%= simple_form_for @ride do |f| %>
    <%= f.input :start_date, input_html: { :value => @ride.start_date } %>
    <%= f.input :end_date, input_html: { :value => @ride.end_date } %>
    <%= f.input :car, input_html: { :value => @ride.car } %>
    <%= f.submit "Save changes", class: "btn btn-primary" %>
  <% end %>

  <div class="small" style="margin: 16px 0;">
    <%= link_to "Go back to the ride list without saving", cars_path, class: "btn-primary" %>
  </div>

</div>
